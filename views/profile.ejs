    <script>
        const cookie = document.cookie;
        console.log('Coo'+cookie);
        if(cookie==="")
        {
            $('#logout').hide();
            $('#login').show();
            $('#register').show();
            $('#register').html("register");
            $("#register").attr("href", "/registerpage");
        }
        else{
            $('#logout').show();
            $('#login').hide();
            $('#register').html("Profile");
            $("#register").attr("href", "/profilepage");
        }
    </script>
