<script>
    $(document).ready(function(){
        var email,pass;
        $("#submit").click(function(){
            username=$("#username").val();
            email=$("#email").val();
            pass=$("#password").val();
            cpass=$("#cpassword").val();
            if (pass != cpass) {
                console.log("Ran");
                alert("Passwords do not match.");
                return false;
            }
            
            /*
            * Perform some validation here.
            */
            $.post("/auth/register",{email:email,pass:pass,username:username,cpass:cpass},function(data){
                if(data==='done') {
                    window.location.href="/index";
                }
            });
        });
    });
</script>

