<div class="login-form">
        <h2 class="text-center" style="color: white;">Register</h2>       
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" required="required",name = "username" id="username">
            <% if (error.username) { %>
            <p><%= error.username.msg %></p>
            <% } %>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Email" required="required",name = "email" id ="email">
            <% if (error.email) { %>
                <p><%= error.email.msg %></p>
                <% } %>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" required="required",name = "password" id="password">
            <% if (error.pass) { %>
                <p><%= error.pass.msg %></p>
                <% } %>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Confirm Password" required="required",name = "cpassword" id ="cpassword">
            <% if (error.cpass) { %>
            <p><%= error.cpass.msg %></p>
            <% } %>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-block" id="submit">Register</button>
        </div>        
    <p class="text-center"><a style="color: white;" href="/loginpage">Click here to log in</a></p>
